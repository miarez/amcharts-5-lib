{
  "id": "radar-stacked",
  "family": "radial-series",
  "variant": "stacked-radar",

  "container": "chartdiv",

  "data": {
    "type": "csv",
    "url": "./data/radar-stacked.csv",
    "delimiter": ","
  },

  "fields": {
    "angle": "category"
  },

  "axes": {
    "angle": {
      "type": "category",
      "startAngle": 0,
      "endAngle": 360
    },
    "radius": {
      "min": 0
    }
  },

  "series": [
    { "name": "Series 1", "valueField": "value1" },
    { "name": "Series 2", "valueField": "value2" },
    { "name": "Series 3", "valueField": "value3" }
  ],

  "options": {
    "innerRadius": 0
  },

  "decorators": {
    "legend": { "enabled": true },
    "cursor": { "enabled": false },
    "scrollbarX": { "enabled": false }
  },

  "theme": {
    "animated": true
  }
}
