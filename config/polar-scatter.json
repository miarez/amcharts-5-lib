{
  "id": "polar-scatter",
  "family": "radial-series",
  "variant": "polar-scatter",

  "container": "chartdiv",

  "data": {
    "type": "csv",
    "url": "./data/polar-scatter.csv",
    "delimiter": ","
  },

  "fields": {
    "x": "x",
    "y": "y",
    "size": "size"
  },

  "axes": {
    "angle": {
      "type": "value",
      "startAngle": 0,
      "endAngle": 360
    },
    "radius": {
      "min": 0
    }
  },

  "series": [{ "name": "Points", "valueField": "y" }],

  "options": {
    "innerRadius": 0
  },

  "decorators": {
    "legend": { "enabled": false }
  }
}
