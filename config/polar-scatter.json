{
  "id": "polar-scatter",
  "family": "radial-series",
  "variant": "polar-scatter",

  "container": "chartdiv",

  "data": {
    "type": "csv",
    "url": "./data/polar-scatter.csv",
    "delimiter": ","
  },

  "fields": {
    "angle": "category"
  },

  "axes": {
    "angle": {
      "type": "category",
      "startAngle": 0,
      "endAngle": 360,
      "showGrid": false
    },
    "radius": {
      "min": 0,
      "strictMinMax": false
    }
  },

  "series": [
    {
      "name": "Group A",
      "valueField": "valueA"
    },
    {
      "name": "Group B",
      "valueField": "valueB"
    }
  ],

  "options": {
    "innerRadius": 0
  },

  "decorators": {
    "legend": { "enabled": true },
    "cursor": { "enabled": false },
    "scrollbarX": { "enabled": false }
  },

  "theme": {
    "animated": true
  }
}
